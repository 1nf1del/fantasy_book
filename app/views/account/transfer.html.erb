<div class="container padding-large-horizontal">

  <h2> Transfer </h2>

  <div class ="col-md-6">
    <p> Current Balance: <%= number_to_currency current_user.balance_dollars %> </p>
    <p> Sender: <%= current_user.username %> </p>

    <%= form_tag transfers_path do %>
      <p> Receiver: <%= text_field_tag :receiver %> </p>
      <p> Amount: <%= number_field_tag :amount_dollars %> </p>
      <%= submit_tag "Transfer" %>
    <% end %>
  </div>

  <div class ="col-md-6">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th> Date </th>
          <th> Status </th>
          <th> Side </th>
          <th> Amount </th>
        </tr>
      </thead>
      <% @transfers.each do |transfer| %>
        <tr>
        <td><%= transfer.created_at.strftime("%m/%d/%y") %> </td>
        <td><%= transfer.state %> </td>
        <td><%= transfer.side(current_user) %> </td>
        <td><%= number_to_currency transfer.amount_dollars %> </td>
      <% end %>
</tr>
</table>



  </div>



</div>
