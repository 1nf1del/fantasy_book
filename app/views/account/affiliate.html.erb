<div class="container padding-large-horizontal">
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th> Date </th>
        <th> Status </th>
        <th> Amount </th>
        <th> Player </th>
      </tr>
    </thead>
    <% @aps.each do |ap| %>
      <tr>
        <td> <%= ap.created_at.strftime("%m/%d/%y") %> </td>
        <td> <%= ap.state %> </td>
        <td> <%= number_to_currency ap.amount_dollars %></td>
        <td> <%= ap.user.username %> </td>
      </tr>
    <% end %>
  </table>



</div>
